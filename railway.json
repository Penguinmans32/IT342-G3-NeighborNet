{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml",
    "buildCommand": "apt-get update && apt-get install -y maven && ls -la && cd /app/backend && ls -la && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd /app/backend && java -jar target/NeighborNet-Backend-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}